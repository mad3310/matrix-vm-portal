<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.letv.portal.dao.IUserDao">

	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="User">
		<result column="ID" property="id" />
		<result column="UC_ID" property="ucId" />
		<result column="OAUTH_ID" property="oauthId" />

		<result column="USERNAME" property="userName" />
		<result column="EMAIL" property="email" />
		<result column="MOBILE" property="mobile" />

		<result column="IS_ADMIN" property="isAdmin" />

		<result column="DELETED" property="deleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
	</resultMap>
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and ID=#{id}
			</if>
			<if test="userName != null  and userName != '' ">
				and USERNAME =#{userName}
			</if>
			<if test="email != null  and email != '' ">
				and EMAIL =#{email}
			</if>
			<if test="mobile != null  and mobile != '' ">
				and MOBILE =#{mobile}
			</if>
		</trim>
	</sql>

	<!-- WEBPORTAL_DB_USER table all fields -->
	<sql id="Base_Column_List">
		ID,UC_ID,OAUTH_ID,USERNAME,EMAIL,MOBILE,IS_ADMIN,
		DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER
	</sql>

	<!-- 插入记录 -->
	<insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id">
		insert into WEBPORTAL_USER (UC_ID,OAUTH_ID,USERNAME,EMAIL,MOBILE,IS_ADMIN, CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER) values
		(#{ucId},#{oauthId},#{userName},#{email},#{mobile},#{isAdmin},now(),#{createUser},now(),#{updateUser})
	</insert>


	<!-- 物理删除 -->
	<update id="delete" parameterType="User">
		delete from WEBPORTAL_USER where ID = #{id}
	</update>

	<update id="updateBySelective" parameterType="User">
		update WEBPORTAL_USER
		<set>
			<if test="userName != null  and userName != '' ">
				USERNAME=#{userName},
			</if>
			<if test="email != null  and email != '' ">
				EMAIL=#{email},
			</if>
			<if test="mobile != null  and mobile != '' ">
				MOBILE=#{mobile},
			</if>
		</set>
		where ID = #{id}
	</update>

	<!-- 根据id查询-->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_USER where ID = #{id}
	</select>
	<!-- 根据ucid查询-->
	<select id="selectByUcId" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_USER where UC_ID = #{ucId}
	</select>
	<select id="selectUserIdByUcId" resultType="java.lang.Long" parameterType="java.lang.Long">
		select
			ID
		from WEBPORTAL_USER where UC_ID = #{ucId}
	</select>
	<!-- 根据oauthid查询-->
	<select id="selectByOauthId" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_USER where OAUTH_ID = #{oauthId}
	</select>

	<!-- 根据userName查询-->
	<select id="selectByUserName" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_USER where USERNAME = #{userName}
	</select>

	<!-- 根据userName查询用户是否存在-->
	<select id="existByUserName" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select count(1)
		from WEBPORTAL_USER where USERNAME = #{userName}
	</select>

	<!-- 根据条件查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
			parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_USER
		<include refid="Example_Where_Clause" />
	</select>

</mapper>