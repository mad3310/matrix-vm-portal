<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.letv.portal.dao.cloudvm.ICloudvmFlavorDao">
	<!-- Result Map -->
	<resultMap id="BaseResultMap" type="CloudvmFlavor">
		<result column="ID" property="id" />
		<result column="REGION" property="region"/>
		<result column="FLAVOR_ID" property="flavorId" />
		<result column="VCPUS" property="vcpus"/>
		<result column="RAM" property="ram"/>
		<result column="DISK" property="disk"/>
		<result column="STORAGE" property="storage"/>
		<result column="DELETED" property="deleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
	</resultMap>

	<!-- WEBPORTAL_ADMIN_OP_LOG table all fields -->
	<sql id="Base_Column_List">
		f.ID,f.REGION,f.FLAVOR_ID,f.VCPUS,f.RAM,f.DISK,f.STORAGE,
		f.DELETED,f.CREATE_TIME,f.CREATE_USER,f.UPDATE_TIME,f.UPDATE_USER
	</sql>

	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and f.ID=#{id}
			</if>
			<if test="region != null ">
				and f.REGION=#{region}
			</if>
			<if test="flavorId != null ">
				and f.FLAVOR_ID=#{flavorId}
			</if>
			<if test="vcpus != null ">
				and f.VCPUS=#{vcpus}
			</if>
			<if test="ram != null ">
				and f.RAM=#{ram}
			</if>
			<if test="disk != null ">
				and f.DISK=#{disk}
			</if>
			<if test="deleted != null  ">
				and f.DELETED=#{deleted}
			</if>
			<if test="createTime != null  ">
				and f.CREATE_TIME=#{createTime}
			</if>
			<if test="createUser != null  ">
				and f.CREATE_USER=#{createUser}
			</if>
			<if test="updateTime != null  ">
				and f.UPDATE_TIME=#{updateTime}
			</if>
			<if test="updateUser != null  ">
				and f.UPDATE_USER=#{updateUser}
			</if>
		</trim>
	</sql>

	<!-- 插入记录 -->
	<insert id="insert" parameterType="CloudvmFlavor" useGeneratedKeys="true" keyProperty="id" >
		insert into
		WEBPORTAL_CLOUDVM_FLAVOR(REGION,FLAVOR_ID,VCPUS,RAM,DISK,
		DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER)
		values(
		#{region},#{flavorId},#{vcpus},#{ram},#{disk},#{deleted},now(),null,null,null)
	</insert>

	<!-- 更新 -->
	<update id="update" parameterType="CloudvmFlavor">
		update WEBPORTAL_CLOUDVM_FLAVOR
		set
		ID=#{id},
		REGION=#{region},
		FLAVOR_ID=#{flavorId},
		VCPUS=#{vcpus},
		RAM=#{ram},
		DISK=#{disk},
		DELETED=#{deleted},
		CREATE_TIME=#{createTime},
		CREATE_USER=null,
		UPDATE_TIME=now(),
		UPDATE_USER=null
		where ID=#{id}
	</update>

	<!-- 根据条件查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
		parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_CLOUDVM_FLAVOR f
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 物理删除 -->
	<update id="delete" parameterType="CloudvmFlavor">
		delete from WEBPORTAL_CLOUDVM_FLAVOR where ID = #{id}
	</update>

	<!-- 根据id查询-->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from WEBPORTAL_CLOUDVM_FLAVOR f
		where  f.ID = #{id};
	</select>

</mapper>
