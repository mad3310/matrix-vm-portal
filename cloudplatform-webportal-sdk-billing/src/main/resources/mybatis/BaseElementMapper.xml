<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mappes.dtd">
<mapper namespace="com.letv.portal.dao.base.IBaseElementDao">

	<resultMap id="BaseResultMap" type="BaseElement">
		<result column="ID" property="id" />
	
		<result column="NAME" property="name" />
		<result column="DESCN" property="descn" />
			
		<result column="DELETED" property="deleted" />
		<result column="CREATE_TIME" property="createTime" />
		<result column="CREATE_USER" property="createUser" />
		<result column="UPDATE_TIME" property="updateTime" />
		<result column="UPDATE_USER" property="updateUser" />
	</resultMap>
	
	<sql id="Base_Column_List">
		e.ID,
		e.NAME,e.DESCN,
		e.DELETED,e.CREATE_TIME,e.CREATE_USER,e.UPDATE_TIME,e.UPDATE_USER
	</sql>
	
	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="id != null  ">
				and e.ID=#{id}
			</if>
			<if test="name != null and name != '' ">
				and e.NAME like CONCAT('%','${name}','%') escape '^'
			</if>
			<if test="deleted != null  ">
				and e.DELETED=#{deleted}
			</if>
			<if test="createTime != null  ">
				and e.CREATE_TIME=#{createTime}
			</if>
			<if test="createUser != null  ">
				and e.CREATE_USER=#{createUser}
			</if>
			<if test="updateTime != null  ">
				and e.UPDATE_TIME=#{updateTime}
			</if>
			<if test="updateUser != null  ">
				and e.UPDATE_USER=#{updateUser}
			</if>
		</trim>
	</sql>


	<!-- 插入记录 -->
	<insert id="insert" parameterType="BaseElement" useGeneratedKeys="true" keyProperty="id" >
		insert into
		MATRIX_BILLING_BASE_ELEMENT(
			NAME,DESCN,
			DELETED,CREATE_TIME,CREATE_USER,UPDATE_TIME,UPDATE_USER)
		values(
			#{name},#{descn},
			#{deleted},now(),#{createUser},#{updateTime},#{updateUser})
	</insert>

	<!-- -->
	<update id="updateBySelective" parameterType="BaseElement">
		update MATRIX_BILLING_BASE_ELEMENT
		<set>
			<if test="id != null  ">
				ID=#{id},
			</if>
			<if test="name != null and name != '' ">
				NAME=#{name},
			</if>
			<if test="descn != null and descn != ''  ">
				DESCN=#{descn},
			</if>
			
			<if test="deleted != null  ">
				DELETED=#{deleted},
			</if>
			<if test="createTime != null  ">
				CREATE_TIME=#{createTime},
			</if>
			<if test="createUser != null  ">
				CREATE_USER=#{createUser},
			</if>
			<if test="updateTime != null  ">
			    UPDATE_TIME=#{updateTime},
			</if>
			<if test="updateUser != null  ">
			    UPDATE_USER=#{updateUser},
			</if>
		</set>
		where ID=#{id}
	</update>

	<!-- 物理删除 -->
	<update id="delete" parameterType="BaseElement">
		delete from MATRIX_BILLING_BASE_ELEMENT where ID = #{id}
	</update>
	
	<!-- 根据id查询-->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
	        select
			<include refid="Base_Column_List" /> 
			from MATRIX_BILLING_BASE_ELEMENT e
			where e.ID = #{id}
	</select>
	
	<select id="selectByName" resultMap="BaseResultMap" parameterType="java.lang.String">
	        select
			<include refid="Base_Column_List" /> 
			from MATRIX_BILLING_BASE_ELEMENT e
			where e.NAME = #{name}
	</select>
	
	
	<!-- 列表总数 -->
	<select id="selectByMapCount" resultType="java.lang.Integer"
		parameterType="java.util.Map">
		select count(1) from MATRIX_BILLING_BASE_ELEMENT e
		<include refid="Example_Where_Clause" />
	</select>
	<!-- 根据条件查询 -->
	<select id="selectByMap" resultMap="BaseResultMap"
		parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from MATRIX_BILLING_BASE_ELEMENT e
		<include refid="Example_Where_Clause" />
	</select>
	
	
	<sql id="Example_Page_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
			<if test="params != null and params.id != null  ">
				and e.ID=#{params.id}
			</if>
			<if test="params != null and params.name != null and params.name != '' ">
				and e.NAME like CONCAT('%','${params.name}','%') escape '^'
			</if>
			<if test="params != null and params.descn != null and params.descn != ''  ">
				and e.DESCN=#{params.descn}
			</if>
			<if test="params != null and params.deleted != null  ">
				and e.DELETED=#{deleted}
			</if>
			<if test="params != null and params.createTime != null  ">
				and e.CREATE_TIME=#{createTime}
			</if>
			<if test="params != null and params.createUser != null  ">
				and e.CREATE_USER=#{createUser}
			</if>
			<if test="params != null and params.updateTime != null  ">
				and e.UPDATE_TIME=#{updateTime}
			</if>
			<if test="params != null and params.updateUser != null  ">
				and e.UPDATE_USER=#{updateUser}
			</if>
		</trim>
	</sql>
	
	<!-- 分页：根据条件查询 -->
	<select id="selectPageByMap" resultMap="BaseResultMap"
		parameterType="com.letv.common.dao.QueryParam">
		select
		<include refid="Base_Column_List" />
		from MATRIX_BILLING_BASE_ELEMENT e
		<include refid="Example_Page_Where_Clause" />
		ORDER BY e.CREATE_TIME DESC
		<if test="page != null">
      		limit #{page.startRowPosition},#{page.recordsPerPage}
    	</if>
	</select>
</mapper>   