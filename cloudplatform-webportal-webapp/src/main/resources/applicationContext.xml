    <!-- 异常处理 -->
    <bean id="exceptionResolver" class="com.letv.common.exception.DefaultMappingExceptionResolver" />


	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping"/>  
	<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter"/>
	
	 <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<mvc:view-controller path="/" view-name="redirect:/account/login"/>
    <!-- 文件上传 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 编码方式 -->
        <property name="defaultEncoding" value="UTF-8" />
        <!-- 最大上传文件大小10M = 10485760 byte = 10*1024*1024 byte 文件大小限制将在控制器中 -->
        <property name="maxUploadSize" value="10485760" />
        <!-- 最大占用内存大小 2M = 2097152 byte = 2*1024*1024 byte -->
        <property name="maxInMemorySize" value="2097152" />
    </bean>
